rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@versantapp.com';
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      // Admin can read all users (for Dashboard list)
      allow list: if isAdmin();
      // Owner or Admin can get specific user Doc
      allow get: if isOwner(userId) || isAdmin();
      
      // Admin could update user (e.g. ban), Owner can update self
      allow write: if isOwner(userId) || isAdmin();

      // Subcollection: Test Results
      match /testResults/{resultId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
